# Pokemon Showdown LLM Battle Service - Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://psuser:defaultpassword123@localhost:5432/pokemon_showdown
POSTGRES_PASSWORD=defaultpassword123

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Service URLs
SHOWDOWN_SERVER_URL=http://localhost:8000
LEADERBOARD_API_URL=http://localhost:5000

# Environment
ENVIRONMENT=development
DEBUG=true

# API Keys (Replace with your actual keys)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_gemini_api_key_here

# Security
SECRET_KEY=your_secret_key_here_use_random_string
CORS_ORIGINS=*

# Monitoring
GRAFANA_PASSWORD=admin123
PROMETHEUS_RETENTION=30d

# Battle Configuration
DEFAULT_BATTLE_FORMAT=gen9randombattle
MAX_CONCURRENT_BATTLES=6
BATTLE_TIMEOUT=600
AUTO_SAVE_RESULTS=true

# Rate Limiting
API_RATE_LIMIT=100
GENERAL_RATE_LIMIT=50

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# SSL (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Docker Configuration
COMPOSE_PROJECT_NAME=pokemon-showdown-llm