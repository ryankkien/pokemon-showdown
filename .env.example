# LLM Provider Selection
LLM_PROVIDER=gemini  # Options: gemini, openai, anthropic, ollama, custom
USE_MOCK_LLM=true

# Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
# OPENAI_BASE_URL=https://api.openai.com/v1  # Optional, defaults to OpenAI

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229
# ANTHROPIC_BASE_URL=https://api.anthropic.com/v1  # Optional

# Ollama Configuration (for local models)
OLLAMA_MODEL=llama2
# OLLAMA_BASE_URL=http://localhost:11434/v1  # Optional, defaults to local

# Custom LLM Configuration (for any OpenAI-compatible API)
LLM_API_KEY=your_api_key_here
LLM_MODEL=your_model_name
LLM_BASE_URL=https://your-api-endpoint.com/v1

# Pokemon Showdown Server Configuration
PS_SERVER_URL=http://localhost.psim.us/
PS_USERNAME=LLMBot
PS_BATTLE_FORMAT=gen9randombattle

# Available Random Battle Formats:
# gen9randombattle - Current gen random battles
# gen8randombattle - Sw/Sh random battles  
# gen7randombattle - US/UM random battles
# gen6randombattle - OR/AS random battles
# gen5randombattle - B2/W2 random battles
# gen4randombattle - D/P/Pt random battles
# gen3randombattle - R/S/E random battles
# gen2randombattle - G/S/C random battles
# gen1randombattle - R/B/Y random battles
# gen9randomdoublesbattle - Gen 9 doubles random
# gen8randomdoublesbattle - Gen 8 doubles random